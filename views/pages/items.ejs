<!-- Page Content Holder -->
<div id="content" class="cont-style">
    <ol class="breadcrumb">
        <li class="breadcrumb-item "><span style="color:grey;">Items</span></li>
    </ol>
    <div id="from-index" class="row">


        <% for (var i = 1; i < items.length; i++) { %>
            <div class="row col-md-4">




                <script>
                    var il =<%- JSON.stringify(items.length) %>;
                    console.log("items.length:" + il);
                    funcInJsFile();
                    function funcInJsFile() {
                        // Do Stuff

                        var item = {
                            name:<%- JSON.stringify(items[i].name) %>, 
                            category:<%- JSON.stringify(items[i].category) %>,
                            price:<%- JSON.stringify(items[i].price) %>
                    };


                    }
                </script>
            </div>
            <% } %>

    </div>
    <!-- Table -->
    <div class="table-responsive">
        <table class="table table-striped table-hover" id="item-table">
            <thead>
                <tr class="alert alert-info">
                    <th>Row</th>
                    <th>Item</th>
                    <th>Category</th>
                    <th>Price</th>

                </tr>
            </thead>
            <tbody>
                <% for (var i = 1; i < items.length; i++) { %>
                    <tr style="font-weight: bolder;font-family: Courier New, Courier, monospace">
                        <td>
                            <%= i %>
                        </td>
                        <td>
                            <%= items[i].name %>
                        </td>
                        <td><span class="label label-success"><%= items[i].category %></span></td>
                        <td>
                            <%= items[i].price %> $</td>

                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <!--table end-->

    <div class="row col-md-12">
        <div style="text-align: left">
            <button type="button" class="btn btn-success btn-info" data-toggle="modal" data-target="#addItemModal" style="outline:none;border-color: white;">
                        Add Item</button></div>

    </div>
</div>
<div id="addItemModal" class="modal fade" role="dialog">
    <div class="modal-dialog">

        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Add New Item</h4>
            </div>
            <div class="modal-body">
                <input type="text" name="name" placeholder="item name" id="itemName" /><br />
                <label>Category</label>
                <select id="categoryList">
              <% for (var i = 1; i < categories.length; i++) { %>
              <option value="<%- categories[i].id %>"><%- categories[i].name %></option>
              <% } %>
            </select>
                <br />
                <input type="text" name="price" placeholder="item price" id="itemPrice" /><br />
                <input type="text" name="url" placeholder="item url" id="itemUrl" />
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-success" id="addItemBtn">Add Item</button>
            </div>
        </div>

    </div>
</div>
